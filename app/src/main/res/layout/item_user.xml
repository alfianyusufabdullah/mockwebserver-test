<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/content_decs_avatar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/rowAvatar"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="@string/row_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/rowAvatar"
            app:layout_constraintStart_toEndOf="@+id/rowAvatar"
            android:id="@+id/rowUsername"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"/>

    <TextView
            android:text="@string/row_github_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowGithubUrl"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowUsername"
            app:layout_constraintStart_toStartOf="@+id/rowUsername"
            android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>